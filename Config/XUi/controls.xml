<Config>
	<append xpath="/controls/item_stack/rect">
		<sprite depth="2" name="qualityBackground" width="72" height="72" color="{durabilitycolor}" type="sliced" globalopacity="true" visible="{hasdurability}"/>
		<sprite depth="3" color="[black_alpha]" pos="3,-3" width="66" height="66" type="sliced" visible="{hasdurability}"/>
		<label depth="5" name="textLevel" pos="58,-62" width="55" height="38" text="LEVEL" text_key="pfaltzUiLevel" color="{durabilitycolor}" font_size="20" effect="outline" justify="right" pivot="bottomright" visible="{hasdurability}"/>
		<label depth="5" name="qualityValue" pos="58,-64" width="28" height="28" text="{itemcount}" color="{durabilitycolor}" font_size="26" effect="outline" pivot="bottomleft" visible="{hasdurability}"/>
	</append>
	<set xpath="/controls/item_stack/rect/label[@name='stackValue']/@justify">Right</set>
	<setattribute xpath="/controls/item_stack/rect/label[@name='stackValue']" name="visible">{#!hasdurability}</setattribute>

	<append xpath="/controls/backpack_item_stack/rect">
		<sprite depth="2" name="qualityBackground" width="72" height="72" color="{durabilitycolor}" type="sliced" globalopacity="true" visible="{hasdurability}"/>
		<sprite depth="3" color="[black_alpha]" pos="3,-3" width="66" height="66" type="sliced" visible="{hasdurability}"/>
		<label depth="5" name="textLevel" pos="58,-62" width="55" height="38" text="LEVEL" text_key="pfaltzUiLevel" color="{durabilitycolor}" font_size="20" effect="outline" justify="right" pivot="bottomright" visible="{hasdurability}"/>
		<label depth="5" name="qualityValue" pos="58,-64" width="28" height="28" text="{itemcount}" color="{durabilitycolor}" font_size="26" effect="outline" pivot="bottomleft" visible="{hasdurability}"/>
	</append>
	<set xpath="/controls/backpack_item_stack/rect/label[@name='stackValue']/@justify">Right</set>
	<setattribute xpath="/controls/backpack_item_stack/rect/label[@name='stackValue']" name="visible">{#!hasdurability}</setattribute>

	<append xpath="/controls/drag_item_stack/rect">
		<sprite depth="2" name="qualityBackground" width="86" height="86" color="{durabilitycolor}" type="sliced" globalopacity="true" visible="{hasdurability}"/>
		<sprite depth="3" color="[black_alpha]" pos="3,-3" width="80" height="80" type="sliced" visible="{hasdurability}"/>
		<label depth="5" name="textLevel" pos="70,-77" width="78" height="28" text="LEVEL" text_key="pfaltzUiLevel" color="{durabilitycolor}" font_size="20" effect="outline" justify="right" pivot="bottomright" visible="{hasdurability}"/>
		<label depth="5" name="qualityValue" pos="73,-79" width="28" height="28" text="{itemcount}" color="{durabilitycolor}" font_size="26" effect="outline" pivot="bottomleft" visible="{hasdurability}"/>
	</append>
	<set xpath="/controls/drag_item_stack/rect/label[@name='stackValue']/@justify">Right</set>
	<setattribute xpath="/controls/drag_item_stack/rect/label[@name='stackValue']" name="visible">{#!hasdurability}</setattribute>

	<remove xpath="/controls/trader_item/rect/label[@name='durabilityValue']"/>
	<append xpath="/controls/trader_item/rect">
		<sprite depth="4" name="qualityBackground" width="72" height="72" color="{durabilitycolor}" type="sliced" globalopacity="true" visible="{hasdurability}"/>
		<sprite depth="5" color="[black_alpha]" pos="3,-3" width="66" height="66" type="sliced" visible="{hasdurability}"/>
		<label depth="6" name="textLevel" pos="56,-64" width="53" height="38" text="LEVEL" text_key="pfaltzUiLevel" color="{durabilitycolor}" font_size="20" effect="outline" justify="right" pivot="bottomright" visible="{hasdurability}"/>
		<label depth="6" name="qualityValue" pos="58,-66" width="28" height="28" text="{durabilityvalue}" color="{durabilitycolor}" font_size="26" effect="outline" pivot="bottomleft" visible="{hasdurability}"/>
	</append>
	
	<set xpath="/controls/equipment_stack_sdcs/rect/sprite[@name='durabilityBackground']/@pos">0,0</set>
	<set xpath="/controls/equipment_stack_sdcs/rect/sprite[@name='durabilityBackground']/@width">78</set>
	<set xpath="/controls/equipment_stack_sdcs/rect/sprite[@name='durabilityBackground']/@height">78</set>
	<set xpath="/controls/equipment_stack_sdcs/rect/filledsprite[@name='durability']/@pos">0,0</set>
	<set xpath="/controls/equipment_stack_sdcs/rect/filledsprite[@name='durability']/@width">78</set>
	<set xpath="/controls/equipment_stack_sdcs/rect/filledsprite[@name='durability']/@height">78</set>
	<set xpath="/controls/equipment_stack_sdcs/rect/sprite[@name='lockTypeIcon']/@pos">2,-4</set>

	<append xpath="/controls/equipment_stack_sdcs/rect">
		<sprite depth="5" color="[black_alpha]" pos="3,-3" width="72" height="72" type="sliced"/>
	</append>
</Config>